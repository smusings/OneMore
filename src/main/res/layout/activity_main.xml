<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:configChanges="orientation|screenSize"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="One More ..."
        android:background="@color/Orange"
        android:textColor="@color/White"
        android:textSize="30dp"
        android:gravity="center"/>
        <LinearLayout
            android:layout_row="0"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <fragment
                android:name="com.smusing.onemore.app.FragmentOne"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                tools:layout="@layout/fragment_one" />
            <fragment
                android:name="com.smusing.onemore.app.FragmentTwo"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                tools:layout="@layout/fragment_two" />
        </LinearLayout>
        <LinearLayout
            android:layout_row="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <fragment
                android:name="com.smusing.onemore.app.FragmentThree"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                tools:layout="@layout/fragment_three" />
            <fragment
                android:name="com.smusing.onemore.app.FragmentFour"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                tools:layout="@layout/fragment_four" />
        </LinearLayout>
        <LinearLayout
            android:layout_row="2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <fragment
                android:name="com.smusing.onemore.app.FragmentFive"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                tools:layout="@layout/fragment_five" />
            <fragment
                android:name="com.smusing.onemore.app.FragmentSix"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                tools:layout="@layout/fragment_six" />
        </LinearLayout>
</LinearLayout>